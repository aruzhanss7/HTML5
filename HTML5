import random
import string

def generate_passwords(full_name, birth_date, count=10):
    name_parts = full_name.lower().split()
    birth_date = birth_date.replace(".", "").replace("-", "")  # –£–±–∏—Ä–∞–µ–º —Ç–æ—á–∫–∏ –∏ –¥–µ—Ñ–∏—Å—ã

    if len(name_parts) < 2:
        print("–í–≤–µ–¥–∏—Ç–µ —Ö–æ—Ç—è –±—ã –∏–º—è –∏ —Ñ–∞–º–∏–ª–∏—é!")
        return

    base_words = [
        name_parts[0],  # –ò–º—è
        name_parts[-1],  # –§–∞–º–∏–ª–∏—è
        birth_date,  # –î–∞—Ç–∞ —Ä–æ–∂–¥–µ–Ω–∏—è –±–µ–∑ —Ç–æ—á–µ–∫
        name_parts[0] + birth_date[-2:],  # –ò–º—è + –ø–æ—Å–ª–µ–¥–Ω–∏–µ 2 —Ü–∏—Ñ—Ä—ã –≥–æ–¥–∞
        name_parts[-1] + birth_date[:2],  # –§–∞–º–∏–ª–∏—è + –ø–µ—Ä–≤—ã–µ 2 —Ü–∏—Ñ—Ä—ã –≥–æ–¥–∞
    ]

    symbols = "!@#$%^&*_-+=?"
    passwords = set()

    while len(passwords) < count:
        word = random.choice(base_words)
        random_symbol = random.choice(symbols)
        random_number = str(random.randint(10, 99))  # –°–ª—É—á–∞–π–Ω–æ–µ —á–∏—Å–ª–æ –æ—Ç 10 –¥–æ 99
        password = f"{word}{random_symbol}{random_number}"
        passwords.add(password)

    return list(passwords)

# –í–≤–æ–¥ –æ—Ç –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—è
full_name = input("–í–≤–µ–¥–∏—Ç–µ –§–ò–û: ")
birth_date = input("–í–≤–µ–¥–∏—Ç–µ –¥–∞—Ç—É —Ä–æ–∂–¥–µ–Ω–∏—è (–î–î.–ú–ú.–ì–ì–ì–ì): ")

# –ì–µ–Ω–µ—Ä–∞—Ü–∏—è –ø–∞—Ä–æ–ª–µ–π
passwords = generate_passwords(full_name, birth_date)

# –í—ã–≤–æ–¥ –ø–∞—Ä–æ–ª–µ–π
print("\nüîê –°–≥–µ–Ω–µ—Ä–∏—Ä–æ–≤–∞–Ω–Ω—ã–µ –ø–∞—Ä–æ–ª–∏:")
for i, password in enumerate(passwords, 1):
    print(f"{i}. {password}")
